@page
@model RPDemo.Pages.Orders.DeleteModel
@{

    @if (Model.Order is null)
    {
        <h4>Requested record was not found.</h4>
    }

    else
    {
        <div class="h4">
        Do you want to delete this order placed on @Model.Order.OrderDate?
        </div>
        <form method="post">
        <input value="@Model.Id" type="hidden" />
            <button type="submit" class="btn-primary btn mt-4">Delete Order</button>
        </form>
    }

}
